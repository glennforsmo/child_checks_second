<div class="form-actions">
  <h1>Edit a child</h1>

  <p>Use the form below to edit a child</p>
</div>

<%= form_for(@child, html: { class: 'form-horizontal' }) do |f| %>

  <% if @child.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@child.errors.count, "error") %> prohibited this child from being edited:</h2>

      <ul>
      <% @child.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :age, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :age %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <%= link_to 'Back', children_path, class: 'btn' %>
  </div>
<% end %>
